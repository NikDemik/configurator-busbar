generator client {
  provider = "prisma-client"
  output   = "../prisma/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model BusbarSeries {
  id         Int           @id @default(autoincrement())
  name       String        @unique
  type       BusbarType
  amperage   Int
  phases     Int
  material   String // copper / aluminum
  components Component[]   @relation("SeriesComponents")
  
  @@map("busbarSeries")
}

model Component {
  id            Int           @id @default(autoincrement())
  name          String
  slug          String        @unique
  category      ComponentCategory
  compatibleFor BusbarType    // Теперь одиночное значение, а не массив
  params        Json?
  series        BusbarSeries[] @relation("SeriesComponents")
  
  @@map("component")
}

model Config {
  id          Int        @id @default(autoincrement())
  userEmail   String?
  busbarType  BusbarType
  seriesId    Int?
  amperage    Int
  phases      Int
  totalLength Float
  components  Json // хранится массив выбранных компонентов
  createdAt   DateTime   @default(now())
  
  @@map("config")
}

enum BusbarType {
  TROLLEY
  MONO
  FESTON
}

enum ComponentCategory {
  HOUSING
  CONDUCTOR
  ACCESSORY
  CONNECTOR
  FEED
  SUPPORT
  END_CAP
}
